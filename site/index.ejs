    <style>
      .accessibilityDay {
        filter: grayscale(100%);
      }

      .accessibilityBar {
        position: fixed;
        top: 0;
        width: 100%;
        padding: 20px;
        height: 80px;
        z-index: 9999;
        margin-bottom: 80px;
        background-color: #22d59b;
      }

      .accessibilityBar button {
        display: inline-block;
        font-family: 'ProximaNova-Bold', sans-serif;
        font-weight: 800px;
        font-size: 16px;
        padding: 0 10px;
        height: 40px;
        background-color: #212121;
        color: #f8f8f8;
        border: none;
        margin-right: 20px;
      }

      .accessibilityBar button:hover {
        background-color: #606060;
      }

      .accessibilityBar p {
        font-family: 'ProximaNova-Bold', sans-serif;
        font-weight: 800px;
        display: inline-block;
      }

      .js-app {
        margin-top: 80px;
      }
    </style>
    <script>
      function toggleGreyscale() {
        document.documentElement.classList.toggle('accessibilityDay');

        var colourOnButtonText = 'Make my day accessible';
        var colourOnDescription = 'Lorem ipsum dolor';
        var colourOffButtonText = 'Gimme back my colour';
        var colourOffDescription = 'Some text about what this is, Global Accessibility Day etc';
        var button = document.getElementById('accessibilityDayButton');
        var description = document.getElementById('accessibilityDayDescription');
        if (button.innerHTML == colourOffButtonText) {
          button.innerHTML = colourOnButtonText;
        } else {
          button.innerHTML = colourOffButtonText;
        }
        if (description.innerHTML == colourOffDescription) {
          description.innerHTML = colourOnDescription;
        } else {
          description.innerHTML = colourOffDescription;
        }
      }
    </script>
  </head>
  <body>
    <div class="accessibilityBar">
      <button id="accessibilityDayButton" onClick="toggleGreyscale()">Gimme back my colour</button>
      <p id="accessibilityDayDescription">Some text about what this is, Global Accessibility Day etc</p>
    </div>
    <div class="js-app">
      <% if (typeof bodyContent !== 'undefined') { %><%= bodyContent %><% } %>
    </div>
    <input id="state" type="hidden" value="<%= typeof state !== 'undefined' ? state : '{}' %>">
    <% if (typeof jsPath !== 'undefined') { %><script type="text/javascript" src="<%= jsPath %>"></script><% } %>
  </body>
